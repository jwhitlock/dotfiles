tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/core"
tap "homebrew/services"

brew "ack"
brew "black", restart_service: true
brew "chezmoi"
brew "fish"
brew "gnupg"
brew "hub"
brew "macvim"
brew "magic-wormhole"
brew "pinentry-mac"
brew "pyenv"
brew "python3"
brew "rust"
brew "wget"

cask "1password"
cask "1password-cli"
